<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ThePeopleYouCanTrust" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/custom_tan</item>
        <item name="colorPrimaryVariant">@color/purple_500</item>
        <item name="colorOnPrimary">@color/black</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/grey</item>
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/custom_tan</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:listPreferredItemHeightSmall">48dp</item>

    </style>

    <style name="Theme.ThePeopleYouCanTrust.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:background">@color/grey</item>

        <item name="android:iconTint">@color/purple_500</item>
    </style>

    <style name="Theme.ThePeopleYouCanTrust.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.ThePeopleYouCanTrust.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>