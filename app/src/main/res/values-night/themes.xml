<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ThePeopleYouCanTrust" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/purple_500</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/dark_grey</item>
        <item name="android:windowBackground">@color/black</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:listPreferredItemHeightSmall">48dp</item>
        <item name="windowNoTitle">true</item>
        <item name="backgroundColor">@color/black</item>
    </style>
    <style name="Theme.ThePeopleYouCanTrust.AppBar" parent="Widget.MaterialComponents.AppBarLayout.Primary" >
        <item name="backgroundColor">@color/black</item>
    </style>

    <style name="Theme.ThePeopleYouCanTrust.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="android:background">@color/dark_grey</item>
    </style>

</resources>